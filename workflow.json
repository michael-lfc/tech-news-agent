{
  "id": "tech-news-workflow",
  "name": "Tech News Agent Workflow",
  "category": "technology",
  "short_description": "Fetches and delivers the latest technology news headlines.",
  "long_description": "This workflow listens for messages containing the word 'news' on Telex, then triggers the TechPulse Agent to fetch and return the latest technology news from an external API.",
  "nodes": [
    {
      "id": "trigger",
      "type": "trigger",
      "name": "Message Trigger",
      "label": "Message Trigger",
      "typeVersion": 1,
      "config": {
        "event": "message",
        "platform": "telex",
        "conditions": [
          { "field": "text", "value": "news", "operator": "contains" }
        ]
      },
      "position": [100, 100],
      "children": [
        {
          "id": "agent",
          "type": "agent",
          "name": "Tech News Agent",
          "label": "Tech News Agent",
          "typeVersion": 1,
          "config": {
            "agentId": "techPulse",
            "url": "https://powerful-atoll-01260-84ad49c653d5.herokuapp.com/telex/a2a/techpulse/message"
          },
          "position": [300, 100]
        }
      ]
    }
  ]
}
